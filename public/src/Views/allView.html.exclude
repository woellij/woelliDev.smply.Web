<!doctype html>
<html>
<body>
    <div class="row" style="height:100%">
        <div id="grid" style="height:100%" data-bind="foreach: items">
            <a href="#" class="th item" data-bind="style: { height: height }">
                <img class="pinImage" style="width:100%"
                     data-bind="attr: { src: image }, style:{ width: $root.columnWidth() +'px' }" />
            </a>
        </div>
    </div>
</body>
</html>